---
import QCM from "./QCMSetup.svelte";
import {
    all_difficulty,
    all_questions,
    all_tags,
    all_types,
    arborescence_cours
} from "../lib/files";
import { defaultFilters } from "../lib/qcmFilters";
import type { PreSetFilters } from "../lib/qcmFilters";

interface Props {
    preSetFilters?: PreSetFilters;
    defaultQuestionCount?: number
}

const { preSetFilters, defaultQuestionCount } = Astro.props;
---
<QCM
    all_questions={all_questions}
    arborescence_cours={arborescence_cours}
    all_tags={all_tags}
    all_types={all_types}
    all_difficulty={all_difficulty}
    defaultFilters={defaultFilters}
    preSetFilters={preSetFilters ?? null}
    defaultQuestionCount={defaultQuestionCount ?? 20}
    client:load
/>
