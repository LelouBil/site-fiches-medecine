---
import {arborescence_cours} from "@/lib/files";
import Liste from "../../layouts/Liste.astro";
export function getStaticPaths() {
    return arborescence_cours.map((ue) => {
        return {params: {ue_id: ue.id}}
    })
}

const {ue_id} = Astro.params;
const ue = arborescence_cours.find(ue => ue.id === ue_id)!;
---
<Liste title=`Liste des Themes de l'UE ${ue.name}`>
    <h1>Liste des Themes dans {ue.name}</h1>
    <ul>
        {ue.themes.map(theme => (
                <li>
                    <a href={`${theme.id}`}>{theme.name}</a>
                </li>
        ))}
    </ul>
</Liste>